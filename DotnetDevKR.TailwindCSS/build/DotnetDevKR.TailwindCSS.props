<Project>
  <ItemGroup>
    <Content
      Include="$(MSBuildThisFileDirectory)..\runtime\**\*"
       CopyToOutputDirectory="PreserveNewest"
       Pack="true"
       Visible="false" />
  </ItemGroup>

  <ItemGroup>
    <Watch Include="**\*.razor" AlwaysRebuild="true" />
    <Watch Include="**\*.html" AlwaysRebuild="true" />
    <Watch Include="**\*.cshtml" AlwaysRebuild="true" />
    <Watch Include="**\*.css" AlwaysRebuild="true" />
    <Watch Include="tailwind.config.js" Condition="Exists('$(ProjectDir)tailwind.config.js')" AlwaysRebuild="true" />
  </ItemGroup>
</Project>
